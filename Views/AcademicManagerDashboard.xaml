<!-- Root UserControl for Academic Manager Dashboard -->
<!-- Width and Height set to 800x450 -->
<!-- x:Class links this XAML to AcademicManagerDashboard.xaml.cs -->

<UserControl x:Class="ClaimManagementApp.Views.AcademicManagerDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="450">
    <Grid Margin="10">
        <!--   grid container with 10px margin on all sides -->

        <StackPanel Margin="10">
            <!-- StackPanel to stack all dashboard components vertically -->
            <!-- Top navigation links aligned to the right -->
            <!-- TextBlocks act as a clickable menu item with MouseDown events -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="Lecturer Dashboard" Foreground="Blue" Cursor="Hand" MouseDown="GoToLecturer" Margin="0,0,10,0"/>
                <TextBlock Text="Academic Manager" Foreground="Blue" Cursor="Hand" MouseDown="GoToManager" Margin="0,0,10,0"/>
                <TextBlock Text="Logout" Foreground="Red" Cursor="Hand" MouseDown="GoToLogin"/>
            </StackPanel>

            <!-- Section header for pending claims list -->
            <TextBlock Text="Pending Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- ListBox showing static pending claims -->
            <!-- It will be replace with dynamic data binding in future -->
            <ListBox x:Name="lstPendingClaimsManager" Height="220" Margin="0,0,0,10">
                <ListBoxItem Content="Claim #201 — Lecturer C — R4 000"/>
                <ListBoxItem Content="Claim #202 — Lecturer D — R2 800"/>
                <ListBoxItem Content="Claim #203 — Lecturer E — R3 200"/>
            </ListBox>

            <!-- Action buttons for approving or declining selected claims -->
            <!-- Added click events handled in the code-behind -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Approve" Width="100" Margin="5" Click="ApproveSelected_Click"/>
                <Button Content="Decline" Width="100" Margin="5" Click="DeclineSelected_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>    <!-- End of main StackPanel, Grid, and UserControl -->
</UserControl>
