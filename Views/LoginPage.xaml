<UserControl x:Class="ClaimManagementApp.Views.LoginPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Height="350">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Login Title -->
        <TextBlock Text="Login" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>

        <!-- Form Fields -->
        <StackPanel Grid.Row="1" Margin="0,20,0,0">
            <TextBlock Text="Username" Margin="0,5,0,0" FontWeight="SemiBold"/>
            <TextBox x:Name="txtUsername" Margin="0,5"/>

            <TextBlock Text="Password" Margin="0,10,0,0" FontWeight="SemiBold"/>
            <PasswordBox x:Name="txtPassword" Margin="0,5"/>
        </StackPanel>

        <!-- Role Selection -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock Text="Select Role" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <ComboBox x:Name="cmbRole">
                <ComboBoxItem Content="Lecturer"/>
                <ComboBoxItem Content="Programme Coordinator"/>
                <ComboBoxItem Content="Academic Manager"/>
            </ComboBox>
        </StackPanel>

        <!-- Login Button -->
        <Button Grid.Row="3" Content="Login" Width="100" HorizontalAlignment="Center" Margin="0,10" Click="Login_Click"
                ToolTip="Click to login" IsEnabled="{Binding CanLogin}"/>

        <!-- Error Message -->
        <TextBlock x:Name="txtError" Foreground="Red" Grid.Row="4" HorizontalAlignment="Center"/>

        <!-- Forgot Password Link -->
        <TextBlock Text="Forgot Password?" 
                   Grid.Row="5"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   Foreground="Blue"
                   Cursor="Hand"
                   MouseDown="ForgotPassword_Click"/>
    </Grid>
</UserControl>
