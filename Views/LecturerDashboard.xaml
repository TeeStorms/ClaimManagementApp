<UserControl x:Class="ClaimManagementApp.Views.LecturerDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="450">
    <Grid Margin="10">
        <StackPanel Margin="10">
            <!-- Top Navigation -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="Programme Coordinator" Foreground="Blue" Cursor="Hand" MouseDown="GoToCoordinator" Margin="0,0,10,0"/>
                <TextBlock Text="Academic Manager" Foreground="Blue" Cursor="Hand" MouseDown="GoToManager" Margin="0,0,10,0"/>
                <TextBlock Text="Logout" Foreground="Red" Cursor="Hand" MouseDown="GoToLogin"/>
            </StackPanel>

            <!-- Page Header -->
            <TextBlock Text="Lecturer Dashboard" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Lecturer Actions -->
            <Button Content="Submit New Claim" Width="180" Margin="0,0,0,10" Click="SubmitClaim_Click"/>
            <Button Content="Upload Document" Width="180" Margin="0,0,0,10" Click="UploadDocument_Click"/>

            <!-- Dummy claim status tracker -->
            <TextBlock Text="Claim Status Tracker" FontWeight="Bold" FontSize="16" Margin="0,20,0,10"/>
            <ListBox x:Name="lstClaimStatus" Width="350" Height="120" Margin="0,0,0,10">
                <ListBoxItem Content="Claim #123 — Submitted"/>
                <ListBoxItem Content="Claim #124 — Approved"/>
                <ListBoxItem Content="Claim #125 — Pending Verification"/>
            </ListBox>
        </StackPanel>
    </Grid>
</UserControl>
