<!-- Root UserControl for Programme Coordinator Dashboard -->
<!-- Width: 800, Height: 450 -->

<UserControl x:Class="ClaimManagementApp.Views.ProgrammeCoordinatorDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="800" Height="450">

    <!-- Main Grid and vertical StackPanel container for all UI elements -->
    <Grid Margin="10">
        <StackPanel Margin="10">
            <!-- Top navigation links -->
            <!-- Clickable TextBlocks navigate between dashboards or logout -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                <TextBlock Text="Lecturer Dashboard" Foreground="Blue" Cursor="Hand" MouseDown="GoToLecturer" Margin="0,0,10,0"/>
                <TextBlock Text="Academic Manager" Foreground="Blue" Cursor="Hand" MouseDown="GoToManager" Margin="0,0,10,0"/>
                <TextBlock Text="Logout" Foreground="Red" Cursor="Hand" MouseDown="GoToLogin"/>
            </StackPanel>

            <!-- Header for pending claims section -->
            <TextBlock Text="Pending Claims" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- ListBox showing static pending claims (Phase 1 prototype) -->
            <ListBox x:Name="lstPendingClaimsCoordinator" Height="220" Margin="0,0,0,10">
                <ListBoxItem Content="Claim #101 — Lecturer A — R2 000"/>
                <ListBoxItem Content="Claim #102 — Lecturer B — R3 500"/>
                <ListBoxItem Content="Claim #103 — Lecturer C — R1 800"/>
            </ListBox>

            <!-- Approve and Decline buttons for pending claims -->
            <!-- Click events handled in code-behind (Phase 1 prototype) -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="Approve" Width="100" Margin="5" Click="ApproveSelected_Click"/>
                <Button Content="Decline" Width="100" Margin="5" Click="DeclineSelected_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
